@model Ders

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="mb-4">@Model.Ad - <span class="text-primary">İçerik Yönetimi</span></h3>

                    <a class="btn btn-primary mb-4"
                        href="@Url.Action("HaftaEkle", "Ogretmen", new { dersId = Model.Id })">
                        <i class="bi bi-plus-lg"></i> Yeni Hafta Ekle
                    </a>
                    <a class="btn btn-secondary mb-4 ms-2"
                        href="@Url.Action("DersOgrenciEkle", "Ogretmen", new { dersId = Model.Id })">
                        <i class="bi bi-people"></i> Öğrenci Ekle / Çıkar
                    </a>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 10%;">Hafta</th>
                                    <th style="width: 30%;">Açıklama</th>
                                    <th style="width: 25%;">Mevcut Dosya</th>
                                    <th style="width: 35%;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hafta in Model.Haftalar.OrderBy(w => w.Sayi))
                                {
                                    <tr>
                                        <td><strong>@hafta.Sayi</strong></td>
                                        <td>@hafta.Aciklama</td>
                                        <td>
                                            @if (hafta.Dosya != null)
                                            {
                                                <a href="@hafta.Dosya.DosyaYolu" target="_blank" class="text-decoration-none">
                                                    <i class="bi bi-file-earmark-pdf"></i> @hafta.Dosya.DosyaAdi
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Yok</span>
                                            }
                                        </td>
                                        <td>
                                            <form method="post" enctype="multipart/form-data" class="d-inline-block me-2">
                                                <input type="hidden" name="haftaId" value="@hafta.Id" />
                                                <div class="d-flex flex-column flex-sm-row gap-2 align-items-start">
                                                    <input type="file" name="pdf" accept=".pdf" required
                                                        class="form-control form-control-sm" />
                                                    <button type="submit" asp-action="PdfYukle"
                                                        class="btn btn-success btn-sm">
                                                        <i class="bi bi-upload"></i> Yükle
                                                    </button>
                                                </div>
                                            </form>
                                            <form method="get" class="d-inline-block">
                                                <input type="hidden" name="id" value="@hafta.Id" />
                                                <button type="submit" asp-action="HaftaSil"
                                                    class="btn btn-outline-danger btn-sm mt-2 mt-sm-0">
                                                    <i class="bi bi-trash"></i> Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
