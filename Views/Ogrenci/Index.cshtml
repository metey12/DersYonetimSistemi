@model Ogrenci

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="mb-4">@Model.AdSoyad - <span class="text-primary">Derslerim</span></h3>

                    @if (Model.Dersler != null && Model.Dersler.Any())
                    {
                        <ul class="list-group">
                            @foreach (var ders in Model.Dersler)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-medium">@ders.Ad</span>
                                    <a class="btn btn-outline-primary btn-sm" asp-controller="Ogrenci" asp-action="Ders"
                                        asp-route-dersAdi="@ders.Ad">
                                        <i class="bi bi-eye"></i> Görüntüle
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-3">Herhangi bir derse kayıtlı değilsiniz.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
